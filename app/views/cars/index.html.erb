<!DOCTYPE html>
<html lang="en">
<head>
	<title>Login V2</title>
	<meta charset="UTF-8">


</head>
<body>
<%= image_tag ("/assets/35.gif"), class: "img-responsive hidden loader" ,:style => "display: block;margin-left: auto;margin-right: auto;" %>
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<%= form_tag({}, {:method => :get}) do %>

					<span class="login100-form-title p-b-26">
						Online Data Extractor
					</span>
					<span class="login100-form-title p-b-48">
						<i class="zmdi zmdi-font"></i>
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Valid email is: a@b.c">
						<input class="input100" type="text" name="url">
						<span class="focus-input100" data-placeholder="URL..."></span>
					</div>

					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<%= submit_tag("Submit", :class => "submit_btn hidden") %>
							<button class="login100-form-btn click_submit">
								Submit
							</button>
						</div>
					</div>

					<div class="text-center p-t-115">
		
				
					</div>

				<% end %>

				<div  class="table-responsive">
				<% if @hash.present? %>
				<table class="table">
			    <thead>
			      <tr>
			        <th>TYPE</th>
			        <th>TITLE</th>
			        <th>PRICE</th>
			      </tr>
			    </thead>
			    <tbody>
			    	<% @hash.each_with_index do |h,index| %>
			      <tr>
			        <td><%= @hash[index][0]%></td>
			        <td><%= @hash[index][1]%></td>
			        <td><%= @hash[index][2]%></td>
			      </tr>
			      <% end %>
			    </tbody>
			  </table>
			  <% end %>
			  </div>
			</div>
		</div>
	</div>
	

	<div id="dropDownSelect1"></div>
	

</body>
</html>
<script type="text/javascript">
	$( ".click_submit" ).click(function() {
		$(".loader").removeClass('hidden');
  $( ".submit_btn" ).click();
});
    jQuery(document).ready(function() {
        $(".loader").addClass('hidden');
    });
</script>